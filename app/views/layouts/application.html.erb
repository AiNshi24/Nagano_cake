<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">

    <header class="shadow-sm">
      <nav class="navbar navbar-light">
        <div class="container">
          <div class="header-left">
            <%= link_to "ながのCAKE", root_path, class:"navbar-brand p-3" %>
          </div>
          <!--<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">-->
          <!--  <span class="navbar-toggler-icon"></span>-->
          <!--</button>-->
          <!--<div class="collapse navbar-collapse" id="navbarNavDropdown">-->
            
            <% if customer_signed_in? %>
            <p class="mr-3 mt-3">ようこそ、<%= current_customer.last_name %>さん！</p>
            <ul class"nav-bar-nav ml-auto">
            <li class="nav-item">
              <%= link_to "マイページ", customers_mypage_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_customer_session_path, class:'nav-link text-dark', method: :delete %>
            </li>
  
            <% elsif admin_signed_in? %>
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", admin_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ジャンル一覧", admin_genres_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path, class:'nav-link text-dark', method: :delete %>
            </li>
  
            <% else %>
            <li class="nav-item">
              <%= link_to "About", about_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", items_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, class:'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class:'nav-link text-dark' %>
            </li>
            </ul>
            <% end %>
            
            <div class="mt-2">
            <form id="forms" method="get">
            <input id="sbox"  id="s" name="s" type="text" placeholder="Search"/>
            <button type="submit" id="sbtn"><i class="fas fa-search"></i></button>
            </form>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    
    <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight ©︎ Infratop inc. All Rights Reserved.</p>
        </div>
      </div>
    </div>
  </footer>

  </body>
</html>
