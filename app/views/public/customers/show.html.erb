<div class="container">
   <%= flash[:notice] %>
  <div class="title">
    <h3>マイページ</h3>
  </div>
  
  <div class="d-flex mb-3">
    <h4 class="font-weight-bold mr-4">登録情報</h4>
    <%= link_to "編集する", customers_information_edit_path, class:"btn btn-success" %>
  </div>
  <table class="table table-bordered">
    <tr>
      <th class="mypage_th">氏名</th>
      <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>
    <tr>
      <th class="mypage_th">カナ</th>
      <td>
        <%= @customer.last_name_kana %>
        <%= @customer.first_name_kana %>
      </td>
    </tr>
    <tr>
      <th class="mypage_th">郵便番号</th>
      <td>
        <%= @customer.postal_code %>
      </td>
    </tr>
    <tr>
      <th class="mypage_th">住所</th>
      <td>
        <%= @customer.address %>
      </td>
    </tr>
    <tr>
      <th class="mypage_th">電話番号</th>
      <td>
        <%= @customer.telephone_number %>
      </td>
    </tr>
    <tr>
      <th class="mypage_th">メールアドレス</th>
      <td>
        <%= @customer.email %>
      </td>
    </tr>
  </table>
  <div class="d-flex mb-3">
    <h4 class="font-weight-bold mr-4">配送先</h4>
    <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary ml-4" %>
  </div>
  <div class="d-flex mb-5">
    <h4 class="font-weight-bold mr-4">注文履歴</h4>
    <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
  </div>
</div>