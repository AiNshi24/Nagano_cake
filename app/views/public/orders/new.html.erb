<div class="container">
  <div class="title">
    <h3>注文情報入力</h3>
  </div>
  <h4 class="font-weight-bold">支払方法</h4>
  <%= form_with model: @order,url: orders_path do |f| %>
  <div class="ml-4">
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>
  </div>
  <div class="ml-4">
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>
  </div>
  
  <h4 class="font-weight-bold">お届け先</h4>
  <div class="ml-4">
    <%= f.radio_button :delivery, 1 %>
    <%= f.label :delivery_1, "ご自身の住所" %><br>
    <div class="ml-4">
     〒<%= current_customer.postal_code %>
     <%= current_customer.address %><br>
     <%= current_customer.last_name %>
     <%= current_customer.first_name %>
     </div>
  </div>
  <div class="ml-4">
    <%= f.radio_button :delivery, 2 %>
    <%= f.label :delivery_2, "登録済住所から選択" %><br>
    <div class="ml-4">
      <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>
    </div>
  </div>
  <div class="ml-4">
    <%= f.radio_button :delivery, 3 %>
    <%= f.label :delivery_3, "新しいお届け先" %>
    <div class="ml-4 delivery">
      <%= f.label :delivery_post, "郵便番号（ハイフンなし）" %>
      <%= f.text_field :delivery_post, placeholder: "0000000" %>
    </div>
    <div class="ml-4 delivery">
      <%= f.label :delivery_address, "住所" %>
      <%= f.text_field :delivery_address, placeholder: "東京都渋谷区代々木神園町0-0", class:"address-field" %>
    </div>
    <div class="ml-4 delivery">
      <%= f.label :delivery_name, "宛名" %>
      <%=f.text_field :delivery_name, placeholder: "令和道子" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "確認画面へ進む", class:"btn btn-primary d-block mx-auto" %>
  </div>
  <% end %>
</div>