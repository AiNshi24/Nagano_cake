<div class="container">
  <div class="title">
    <h3>ショッピングカート</h3>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= image_tag cart_item.item.get_image(50,80) %>
          <%= cart_item.item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.subtotal%></td>
        <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
          <%#= f.hidden_field :item_id, :value => item.id %>
          <%= f.select :amount, *[1..3] %>
          <%= f.submit '変更', class:"btn btn-success" %>
        </td>
        <% end %>
        <td>
          <% if cart_item.customer == current_customer %>
          <%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger" %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>