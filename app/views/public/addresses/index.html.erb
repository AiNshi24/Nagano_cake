<div class="container">
  <div class="title">
    <h3>配送先登録/一覧</h3>
  </div>
  <%= form_with model: @address,url: addresses_path do |f| %>
  <div>
    <%= f.label :postal_code, "郵便番号（ハイフンなし）", class:"address_new" %>
    <%= f.text_field :postal_code, placeholder: "0000000" %>
  </div>
  <div>
    <%= f.label :address, "住所", class:"address_new" %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class:"address-field" %>
  </div>
  <div class="d-flex">
    <%= f.label :name, "名前", class:"address_new" %>
    <%= f.text_field :name, placeholder: "令和道子", class:"address_name" %>
    <%= f.submit "新規登録", class:"btn btn-success address_new_btn" %>
  </div>
  <% end %>
  
  <table class="table table-bordered mt-5">
    <thead>
      <tr>
        <th>郵便番号</th>
        <th class="address_address">住所</th>
        <th>宛名</th>
        <th class="address_nill"></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
      <tr>
        <td>
          <%= address.postal_code %>
        </td>
        <td>
          <%= address.address %>
        </td>
        <td>
          <%= address.name %>
        </td>
        <td class="d-flex">
          <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success mr-2" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>