<div class="container">
  <div class="row">
    <div class="item-image mt-5 mb-5 col-5">
      <%= image_tag @item.get_image(300,400) %>
    </div>
    <div class="introduce col-7">
      <h6 class=" item-name font-weight-bold mt-5"><%= @item.name %></h6>
      
      <p class="mb-5"><%= @item.introduction %></p>
      <div class="centers d-flex mb-3">
      <h6 class="font-weight-bold item-price">¥<%= @item.with_tax_price.to_s(:delimited) %></h6>
      （税込）
        <% if @item.is_active %>
          <div class="text-success font-weight-bold">販売中</div>
        <% else %>
          <div class="text-secondary">販売停止中</div>
        <% end %>
      </div>
      <div class="d-inline-block mt-5">
        <%= form_with model: @cart_item, url: cart_items_path do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, *[1..3], {prompt: "個数選択"} %>
      </div>
        <div class="cart-btm d-inline-block">
          <%= f.submit 'カートに入れる', class:"btn btn-success" %>
        </div>
      
        <% end %>
      
    </div>
  </div>
</div>

