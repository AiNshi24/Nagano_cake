<div class="container">
  <div class="title">
    <h3>注文履歴一覧</h3>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
      <tr>
         <td>
           <%= link_to admin_order_path(order.id), class:"text-dark" do %>
           <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
           <% end %>
         </td>
         <td>
           <%= order.name %>
         </td>
         <td>
           <%= order.order_item_count %>
         </td>
         <td>
           <%= Order.statuses_i18n[order.status] %>
         </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <div class="page mt-3">
    <%= paginate @orders %>
  </div>
</div>
