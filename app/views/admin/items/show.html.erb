<div class="container">
  <div class="title">
    <h3>商品詳細</h3>
  </div>
  
  <div class="row">
    <div class="item-image">
      <%= image_tag @item_image.get_image(200,300) %>
    </div>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <div class="item-show d-flex">
          <label for="name">商品名</label>
          <%= @item.name %>
      </div>
      <div class="item-show d-flex">
          <label for="introduction">商品説明</label>
          <%= @item.introduction %>
      </div>
      <div class="item-show d-flex">
          <label for="price">税込価格<br>(税抜価格)</label>
          <%= @item.with_tax_price %>
          (<%= @item.price %>)　円
      </div>
      <div class="item-show d-flex">
          <label for="is_active">販売ステータス</label>
          <%= @item.is_active %>
      </div>
      <div class="form-group">
        <%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success mx-auto d-block mb-3" %>
      </div>
    </div>
  </div>
</div>