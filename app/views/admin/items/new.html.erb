<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <div class="title">
        <h3>商品新規登録</h3>
      </div>
      
      <div class="form">
        <table>
          <%= form_with model: @item do |f| %>
          <tr>
           <div class="form-group">
            <th><label for="image">商品画像</label></th>
            <td><%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*", class:"form-control-file image" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
            <th><label for="name">商品名</label></th>
            <td><%= f.text_field :name, placeholder: "商品名", class:"form-control name" %></td>
            </div>
          </tr>
          <tr>
            <div class="form-group">
            <th><label for="introduction">商品説明</label></th>
            <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class:"form-control introduction" %></td>
            </div>
          </tr>
          <tr>
             <div class="form-group">
            <th><label for="price">税抜価格</label></th>
            <td><%= f.text_field :price, placeholder: "1000", class:"form-control price" %></td>
            <th>円</th>
            </div>
          </tr>
          <tr>
            <div class="form-group">
              <th><label for="is_active">販売ステータス</label></th>
              <td>
                <%= f.radio_button :is_active, "true" %>
                <%= f.label :is_active_true, "販売中" %>
              
                <%= f.radio_button :is_active, "false" %>
                <%= f.label :is_active_false, "販売停止中" %>
              </td>
            </div>
          </tr>
          <tr>
            <td>
              <div class="form-group">
               <%= f.submit '新規登録', class:"btn btn-success" %>
              </div>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
      
    </div>
  </div>
</div>