<div class="container">
  <div class="title">
    <h3>商品編集</h3>
  </div>
  <div class="row">

    <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">

      <%= form_with model: @item,url: admin_item_path do |f| %>
      <div class="form mx-auto">


        <div class="form-group d-flex">
          <label for="image">商品画像</label>
          <div class="form-box">
            <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*", class:"form-control-file image" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <label for="name">商品名</label>
          <div class="form-box">
            <%= f.text_field :name, placeholder: "商品名", class:"form-controls name" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <label for="introduction">商品説明</label></th>
          <div class="form-box">
            <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class:"form-controls introduction" %>
          </div>
        </div>

        <div class="form-group d-flex">
          <label for="price">税抜価格</label>
          <div class="form-box">
            <%= f.text_field :price, placeholder: "1000", class:"form-controls price" %>
          </div>
            円
        </div>

        <div class="form-group d-flex">
           <label for="is_active">販売ステータス</label>
              <%= f.radio_button :is_active, "true" %>
              <%#= f.label :is_active_true, "販売中" %>
              <div class="center mx-0 mr-2">販売中</div>
              <%= f.radio_button :is_active, "false" %>
              <%#= f.label :is_active_false, "販売停止中" %>
              <div class="center mx-0">販売停止中</div>
        </div>
        <div class="form-group">
          <%= f.submit '変更を保存', class:"btn btn-success mx-auto d-block mb-3" %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>