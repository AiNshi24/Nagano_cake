<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <div class="title">
        <h3>商品一覧</h3>
      </div>

      <table>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to admin_items_path(item.id) do %>
                <%= item.name %>
                <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.is_active %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>